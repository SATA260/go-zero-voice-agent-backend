syntax = "v1"

info (
	title:   "用户实例"
	desc:    "用户实例"
	author:  "2penheimer"
	email:   "2603237065@qq.com"
	version: "v1"
)

import (
	"user/user.api"
)

@server (
	prefix: usercenter/v1
	group:  user
)
service usercenter {
	@doc "send code"
	@handler sendCode
	post /user/sendCode (SendCodeReq) returns (SendCodeResp)

	@doc "register"
	@handler register
	post /user/register (RegisterReq) returns (RegisterResp)

	@doc "login"
	@handler login
	post /user/login (LoginReq) returns (LoginResp)

	@doc "get rpc info"
	@handler detail
	get /user/info (UserInfoReq) returns (UserInfoResp)

	@doc "auth by token"
	@handler verifyToken
	get /user/auth (verifyTokenReq) returns (verifyTokenResp)

	@doc "wechat mini auth"
	@handler wxMiniAuth
	post /user/wxMiniAuth (WXMiniAuthReq) returns (WXMiniAuthResp)
}

